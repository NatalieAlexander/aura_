# AURA Environment Configuration
# Copy this file to .env and fill in your actual values

# Hugging Face Configuration
# Get your token from: https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here

# Model Configuration
MODEL_NAME=microsoft/maira-2

# Cache Configuration
# Optional: Set custom cache directory for models and data
# CACHE_DIR=/path/to/your/cache/directory

# Application Configuration
# Optional: Set custom port for the Gradio interface
# PORT=7861

# Logging Configuration
# Optional: Set log level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

# GPU Configuration
# Optional: Force CPU usage (set to true to disable GPU)
# FORCE_CPU=false

# Development Configuration
# Optional: Enable debug mode
# DEBUG=false
